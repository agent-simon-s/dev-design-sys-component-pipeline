{
  "name": "dev-npm",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test-old": "echo \"Error: no test specified\" && exit 1",
    "test": "mocha test -u bdd -R spec",
    "pretest": "echo 'about to run the test...';npm run lint",
    "posttest": "echo 'the test has been run!'",
    "start": "node server.js",
    "start:dev": "node server.js 4000",
    "stop": "",
    "lint": "jshint *.js",
    "precompile": "npm run clean",
    "clean": "rimraf public/css/*, public/js/*",
    "compile": "npm run compile:ts",
    "compile:ts": "tsc --outDir ./lib --module commonjs ./src/script/app.ts",
    "prebuild": "npm run clean",
    "build:tokens": "style-dictionary clean && style-dictionary build",
    "build:scss": "sass src-components/styles/style.scss dist-components/main.css",
    "build:bundle": "browserify ./src/app.js | uglifyjs --compress --mangle > ./public/js/app.js",
    "build": "npm run build:scss && npm run build:bundle",
    "watch:bundle": "watchify ./src/app.js -o ./public/js/app.js -v"
  },
  "author": "sjds",
  "license": "ISC",
  "dependencies": {
    "express": "^4.17.1"
  },
  "devDependencies": {
    "browserify": "^17.0.0",
    "jshint": "^2.12.0",
    "node-sass": "^5.0.0",
    "rimraf": "^3.0.2",
    "should": "^13.2.3",
    "style-dictionary": "^2.10.2",
    "typescript": "^4.1.3",
    "uglify-js": "^2.4.11",
    "watchify": "^4.0.0"
  }
}
